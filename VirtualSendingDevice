public class VirtualSendingDevice {
    private String message;
    private final String deviceNumber;
    private static int deviceCounter = 1;

    public VirtualSendingDevice(String msg) {
        this.message = msg;
        this.deviceNumber = generateDeviceNumber();
    }

    public void startThreadAndPassToLayers() {
        // Create a new thread with the message and device number
        Thread thread = new Thread(() -> {
            // Perform any necessary operations or actions in the thread
            System.out.println("Thread started for device: " + deviceNumber);
        });

        // Start the thread
        thread.start();
    }

    public String getDeviceNumber() {
        return deviceNumber;
    }

    private static String generateDeviceNumber() {
        String generatedNumber = "Device " + deviceCounter;
        deviceCounter++;
        return generatedNumber;
    }

    // Rest of the VirtualSendingDevice class implementation
}
